{
  "name": "express-ts-api-boilerplate",
  "version": "1.0.0",
  "description": "This is an open-source boilerplate for creating APIs in Typescript utilizing the Express framework.",
  "main": "server.ts",
  "private": true,
  "author": "Everton Marcelino Junior <marcelinojr.everton+github@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node build/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/server.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:sync": "node --require ts-node/register ./node_modules/typeorm/cli.js schema:sync",
    "typeorm:check": "node --require ts-node/register ./node_modules/typeorm/cli.js schema:log"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/express": "^4.17.7",
    "@types/express-rate-limit": "^5.1.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.21.2",
    "rimraf": "^3.0.2",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.58",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.0.1",
    "auto-bind": "^4.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "diacritic": "^0.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "express-slow-down": "^1.4.0",
    "express-validator": "^6.9.2",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mime-types": "^2.1.27",
    "moment": "^2.29.1",
    "mongoose": "^6.0.8",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.10",
    "response-time": "^2.3.2",
    "typeorm": "0.2.37",
    "uuid": "^8.3.2"
  }
}
